<%- include('partials/header') %>
    <section class="banner">
        <h1>Welcome to Book Haven</h1>
        <p>Your one-stop shop for literary treasures</p>
    </section>

    <section class="featured">
        <h2>Featured Books</h2>
        <div class="books">
            <% books.forEach(book => { %>
                <div class="book-card">
                    <h3><%= book.title %></h3>
                    <p>$<%= book.price.toFixed(2) %></p>
                </div>
            <% }); %>
        </div>
    </section>

    <section class="developer">
        <h2>About the Developer</h2>
        <div class="profile-container">
            <img src="/images/JoshPic.jpg" alt="Josh" style="width:150px; height:auto; border-radius:50%; border:3px solid #3498db;">
            <div class="profile-info">
                <h3>Daniel Josh Mijares</h3>
                <p>Full Stack Developer | Bookstore Creator</p>
                <p>Email: mda1588@dlsud.edu.ph</p>
            </div>
        </div>
    </section>
<%- include('partials/footer') %>